{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "major": {
    "enabled": false
  },
  "packageRules": [
    {
      "groupName": "webpack",
      "matchPackagePrefixes": ["webpack"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"]
    },
    {
      "groupName": "postcss",
      "matchPackagePrefixes": ["postcss"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"]
    },
  ]
}
